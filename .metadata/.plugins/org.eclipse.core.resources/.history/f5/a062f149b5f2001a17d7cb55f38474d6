package Exercícios_Lacos_Condicionais;

import java.util.Scanner;

public class LacoCondicional2 {

	public static void main(String[] args) {
		/*
		 * 2-	Faça um programa que entre com três números e coloque em ordem crescente.
		 */
		
		int num1, num2, num3;
		
		Scanner kb = new Scanner (System.in);
		System.out.println("Digite o 1ª número: ");
		num1 = kb.nextInt();
		
		System.out.println("Digite o 2ª número: ");
		num2 = kb.nextInt();
		
		System.out.println("Digite o 3ª número: ");
		num3 = kb.nextInt();
		
		kb.hasNextLine();
		
		if (num1<num2) {
			if(num2<num3) {
				System.out.println(num1"\n"+num2+"\n"num3"\n");
			}else if (num1<num3) {
				System.out.println(num1"\n"+num3+"\n"num2"\n");
			} else {
				System.out.println(num3"\n"+num1+"\n"num2"\n");
			}
		}
		
		else if (num2<num3) {
			if (num1num3) {
				System.out.println(num2"\n"+num1+"\n"num3"\n");
			} else {
				System.out.println(num2"\n"+num2+"\n"num1"\n");
			}
		}else {
			System.out.println(num3"\n"+num2+"\n"num1"\n");
		}
	}

}
